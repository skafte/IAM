<UserControl
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
   xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
	xmlns:System="clr-namespace:System;assembly=mscorlib"
   x:Class="IAM.MainPage"
   mc:Ignorable="d"
   xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
   d:DesignHeight="300" d:DesignWidth="400">

   <Grid x:Name="LayoutRoot" Background="White">
      <Grid x:Name="UserMenu_grd">
      	<Grid.ColumnDefinitions>
      		<ColumnDefinition MaxWidth="300" Width="Auto"/>
      		<ColumnDefinition/>
      	</Grid.ColumnDefinitions>
      	<Grid x:Name="GameSelection_grd" Background="#FF414349" MaxWidth="300">
      		<Grid.RowDefinitions>
      			<RowDefinition Height="60"/>
      			<RowDefinition MinHeight="30"/>
      		</Grid.RowDefinitions>
      		<sdk:Label VerticalAlignment="Bottom" Margin="40,0,20,0" Content="Select a Game" FontFamily="Segoe UI" FontSize="26.667" Height="36" Foreground="{StaticResource HeaderBrush}"/>
      		<ListBox x:Name="GameList_lstbx" VerticalAlignment="Top" SelectionChanged="GamesList_lstbx_SelectionChanged" Grid.Row="1" Margin="40,0,20,0" Foreground="White" FontFamily="/IAM;component/Fonts/Fonts.zip#Segoe UI" FontSize="18.667" Background="{x:Null}" BorderBrush="{x:Null}"/>
      	</Grid>
      	<Grid Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Auto" Margin="20,0,20,20">
      		<ScrollViewer x:Name="scrollViewer" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" VerticalScrollBarVisibility="Disabled" Style="{StaticResource Custom_ScrollViewerStyle}" HorizontalScrollBarVisibility="Auto">
      			<StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
      				<Grid x:Name="CharacterMenu_grd" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="{Binding ViewportHeight, ElementName=scrollViewer}" Margin="0,0,40,0">
      					<Grid.RowDefinitions>
      						<RowDefinition Height="60"/>
      						<RowDefinition/>
      					</Grid.RowDefinitions>
      					<sdk:Label Foreground="{StaticResource HeaderBrush}" Content="Characters" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
      					<toolkit:WrapPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,-20,-20">
      						<Button Content="Aroan (Solar, Night)" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Cal Winters" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Fabian" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Ghenga" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Jasper Amilar" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Nanine Darko" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Springflower in Fire" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Zannan Arroway" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      					</toolkit:WrapPanel>
      				</Grid>
      				<Grid x:Name="PowerMenu_grd" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="{Binding ViewportHeight, ElementName=scrollViewer}" Margin="0,0,40,0">
      					<Grid.RowDefinitions>
      						<RowDefinition Height="60"/>
      						<RowDefinition/>
      					</Grid.RowDefinitions>
      					<sdk:Label Foreground="{StaticResource HeaderBrush}" Content="Powers" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
      					<toolkit:WrapPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,-20,-20">
      						<Button Content="Charms" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Sorcery" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Thaumaturgy" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      					</toolkit:WrapPanel>
      				</Grid>
      				<Grid x:Name="EquipmentMenu_grd" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Height="{Binding ViewportHeight, ElementName=scrollViewer}">
      					<Grid.RowDefinitions>
      						<RowDefinition Height="60"/>
      						<RowDefinition/>
      					</Grid.RowDefinitions>
      					<sdk:Label Foreground="{StaticResource HeaderBrush}" Content="Equipment" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
      					<toolkit:WrapPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,-20,-20">
      						<Button Content="Artifacts" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Mundane equipment" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Weapons" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      						<Button Content="Artifact weapons" Style="{StaticResource Custom_ButtonStyle_Generic}" Margin="0,0,20,20"/>
      					</toolkit:WrapPanel>
      				</Grid>
      			</StackPanel>
      		</ScrollViewer>
      	</Grid>
      </Grid>
      <StackPanel x:Name="UserMenu_stckpnl" Orientation="Horizontal"/>
      <Grid x:Name="CharacterSheetOuter_grd" Visibility="Collapsed" Grid.ColumnSpan="2" Margin="0,0,5,40">
      	<ScrollViewer x:Name="CharacterSheet_scrllvwr" ScrollViewer.VerticalScrollBarVisibility="Auto" Padding="0" BorderBrush="{x:Null}" BorderThickness="0">
      		<Grid x:Name="CharacterSheet_grd" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
      	</ScrollViewer>
      </Grid>
      <Grid x:Name="PowersOuter_grd" Visibility="Collapsed" Grid.ColumnSpan="2" Margin="0,0,5,40">
      	<ScrollViewer x:Name="Powers_scrllvwr" BorderThickness="0" BorderBrush="{x:Null}">
      		<Grid x:Name="Powers_grd"/>
      	</ScrollViewer>
      </Grid>
      <Grid x:Name="EquipmentsOuter_grd" Visibility="Collapsed" Grid.ColumnSpan="2" Margin="0,0,5,40">
      	<ScrollViewer x:Name="Equipments_scrllvwr" BorderThickness="0" BorderBrush="{x:Null}">
      		<Grid x:Name="Equipments_grd"/>
      	</ScrollViewer>
      </Grid>
      <toolkit:BusyIndicator x:Name="LoadingData_bsind" BusyContent="Loading data, Please wait..." IsBusy="True" Visibility="Collapsed" Margin="0,0,395,260" Grid.ColumnSpan="2" />
   </Grid>
</UserControl>
